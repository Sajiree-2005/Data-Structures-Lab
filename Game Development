/*
  Title: Game Development
  Problem Statement:
  Write a program to simulate a simple game scenario where players enter their scores.
  Implement Bubble Sort to arrange the scores in ascending order,
  demonstrating a "level-up" scenario.

  Algorithm Used: Bubble Sort
*/

#include <iostream>
using namespace std;

int main() {
    int i, j, temp, size;

    // Input number of players
    cout << "Enter number of players: " << endl;
    cin >> size;

    int arr[size];

    cout << "The players should enter their scores for the bubble sort game" << endl;
    cout << "\nEnter " << size << " numbers: " << endl;

    // Input scores
    for(i = 0; i < size; i++) {
        cin >> arr[i];
    }

    // Bubble sort algorithm
    for(i = 0; i < size - 1; i++) {
        for(j = 0; j < size - i - 1; j++) {
            if(arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }

    // Output sorted scores
    cout << "\nSimulation of a level-up scenario by bubble sort" << endl;
    cout << "\nAscending order of scores using bubble sort: " << endl;
    for(i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }

    return 0;
}
