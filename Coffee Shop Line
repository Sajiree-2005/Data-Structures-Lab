/*
  Title: Coffee Shop Line (Simple Queue)
  Problem Statement:
  Simulate a coffee shop line using a simple queue data structure.
  - Arrival: Customers arrive and join the line.
  - Order Processing: The first customer gets their order taken.
  - Serving: Once served, the customer leaves the queue, and the next moves forward.

  Algorithm Used: Queue implemented using a singly linked list
*/

#include <iostream>
#include <string>
using namespace std;

// Node to store customer information
class Node {
public:
    string name;
    Node* next;
};

// Queue class using linked list
class Queue {
public:
    Node* front;
    Node* rear;

    Queue() {
        front = nullptr;
        rear = nullptr;
    }

    // Add customer to the queue
    void Enqueue(string n) {
        Node* temp = new Node{n, nullptr};
        if (front == nullptr) {
            front = rear = temp;
        } else {
            rear->next = temp;
            rear = temp;
        }
        cout << n << " joined the line." << endl;
    }

    // Serve customer (remove from front)
    void Dequeue() {
        if (front == nullptr) {
            cout << "Line is empty. Nothing to delete." << endl;
        } else {
            Node* temp = front;
            cout << front->name << "'s order is ready. They leave the line." << endl;
            if (front->next == nullptr) {
                front = rear = nullptr;
            } else {
                front = front->next;
            }
            delete temp;
        }
    }

    // Display the queue
    void display() {
        if (front == nullptr) {
            cout << "Queue is empty. Nothing to display." << endl;
        } else {
            cout << "Current Line: ";
            Node* temp = front;
            while (temp != nullptr) {
                cout << temp->name;
                if (temp->next != nullptr) {
                    cout << " -> ";
                }
                temp = temp->next;
            }
            cout << endl;
        }
    }
};

int main() {
    int choice;
    Queue q;

    cout << "--- Coffee Shop Queue Menu ---\n"
         << "1. New Customer Arrival (Enqueue)\n"
         << "2. Serve Customer (Dequeue)\n"
         << "3. Show Queue\n"
         << "4. Exit\n";

    do {
        cout << "\nChoose an option: ";
        cin >> choice;

        switch (choice) {
        case 1: {
            string name;
            cout << "Enter customer name: ";
            cin >> name;
            q.Enqueue(name);
            break;
        }
        case 2:
            q.Dequeue();
            break;
        case 3:
            q.display();
            break;
        case 4:
            cout << "Exiting the program." << endl;
            break;
        default:
            cout << "Invalid option. Please try again." << endl;
            break;
        }
    } while (choice != 4);

    return 0;
}
